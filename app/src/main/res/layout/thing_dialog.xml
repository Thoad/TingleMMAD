<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/details_dialog"
    android:padding="20dp">

    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Thing ID:"/>
            <TextView android:id="@+id/thing_id_tview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="175dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="Placeholder text 1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Date added:"/>
            <TextView android:id="@+id/thing_date_tview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="175dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="Placeholder text 2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="What item:"/>
            <TextView android:id="@+id/thing_what_tview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="175dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="Placeholder text 3"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Where item:" />
            <TextView android:id="@+id/thing_where_tview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="175dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="Placeholder text 4"/>
        </RelativeLayout>

    </LinearLayout>

    <ImageButton android:id="@+id/delete_thing_ibutton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/delete"/>

</LinearLayout>